@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Giden Kutusu</h4>
			<div class="table-responsive pt-3">
				<table class="table table-bordered">
					<thead>
					<tr>
						<th>#</th>
						<th>Konu</th>
						<th>Alıcı</th>
						<th>Tarih</th>
						<th>Detaylar</th>
					</tr>
					</thead>
					<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.WriterMessageID </td>
							<td>@item.Subject </td>
							<td>@item.ReceiverName </td>
							<td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
							<td><a href="/Writer/Message/MessageDetails/@item.WriterMessageID" class="btn btn-dark">Mesajı Gör</a></td>
						</tr>
					}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

