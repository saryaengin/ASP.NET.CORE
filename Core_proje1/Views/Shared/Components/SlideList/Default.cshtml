@using EntityLayer.Concrete
@model List<Portfolio>
<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mini Portfolyo</h4>
            <div class="owl-carousel owl-theme full-width owl-carousel-dash portfolio-carousel" id="owl-carousel-basic">
                <div class="item">
                    <img src="~/Template/resim/kedi11.jpg" alt="">
                </div>
                <div class="item">
                    <img src="~/Template/resim/kedi2.jpg" alt="">
                </div>
	            <div class="item">
		            <img src="~/Template/resim/gofo1.jpg" alt="">
	            </div>
	            <div class="item">
		            <img src="~/Template/resim/çiko.jpg" alt="">
	            </div>
            </div>
            <div class="d-flex py-4">
                <div class="preview-list w-100">
                    <div class="preview-item p-0">
                        <div class="preview-thumbnail">
                            <img src="~/Template/resim/bn2.jpg" class="rounded-circle" alt="">
                        </div>
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">Sarya Engin</h6>
                                </div>
                                <p class="text-muted">Full-Stack Web Developer</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p class="text-muted">Geleceğin Yazılımcısııı</p>
            <div class="progress progress-md portfolio-progress">
                <div class="progress-bar bg-info" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
</div>