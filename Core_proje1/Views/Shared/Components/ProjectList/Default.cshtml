@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Portfolyo</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th> İsim </th>
                                <th> Görsel Url </th>
                                <th> Görsel Url 2 </th>
	                            <th> Proje Url </th>
	                            <th> Tarih </th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach(var item in Model)
                        {
	                        <tr>
		                        <td>@item.PortfolioID</td>
		                        <td>
			                        <img src="@item.ImageUrl" alt="image"/>
			                        <span class="pl-2">@item.Name</span>
		                        </td>
		                        <td> @item.ImageUrl </td>
		                        <td> @item.ImageUrl2 </td>
		                        <td> @item.ProjectUrl </td>
		                        <td>
			                        <div class="badge badge-outline-info">26 Temmuz 2023</div>
		                        </td>
	                        </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>