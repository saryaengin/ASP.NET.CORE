@using EntityLayer.Concrete
@model List<ToDoListPanel>
<div class="col-md-12 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">To do List</h4>
            <div class="add-items d-flex">
                <input type="text" class="form-control todo-list-input" placeholder="Görevini gir...">
                <button class="add btn btn-info todo-list-add-btn">Ekle</button>
            </div>
            <div class="list-wrapper">
                <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom">
                    @foreach (var item in Model)
                    {
	                    <li>
		                    <div class="form-check form-check-success">
			                    <label class="form-check-label">
				                    <input class="checkbox" type="checkbox">@item.Yapilacaklar</label>
		                    </div>
		                    <i class="remove mdi mdi-close-box"></i>
	                    </li>
                    }
                  @*  <li class="completed">
	                    <div class="form-check form-check-info">
		                    <label class="form-check-label">
			                    <input class="checkbox" type="chechbox" checked> Saat 7'de uyann.
		                    </label>
	                    </div>
	                    <i class="Remove mdi mdi-close-box"></i>
                    </li> *@
                </ul>
            </div>
        </div>
    </div>
</div>