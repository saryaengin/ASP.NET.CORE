@using EntityLayer.Concrete
@model List<Experience>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml"; //new admin eklenecek
}

<div class="row">

	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Deneyimler Tablosu</h4>
				<br/>
				<div class="table-responsive">
					<table class="table table-bordered">
						<thead class="thead-light">
						<tr>
							<th> # </th>
							<th> Başlık </th>
							<th> Tarih </th>
							<th> Sil </th>
							<th> Düzenle </th>
						</tr>
						</thead>
						<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ExperienceID</td>
								<td>@item.Name</td>
								<td>@item.Date</td>
								<td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-light">Sil</a></td>
								<td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-light">Güncelle</a></td>
							</tr>
						}
						</tbody>
					</table>
					<br/>
					<a href="/Experience/AddExperience/" class="btn btn-outline-info">Yeni Deneyim Ekle</a>
				</div>
			</div>
		</div>
	</div>
</div>