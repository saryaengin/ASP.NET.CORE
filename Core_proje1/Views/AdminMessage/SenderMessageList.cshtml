@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">

	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Adminden Yazara Giden Kutusu</h4>
				<br/>
				<div class="table-responsive">
					<table class="table table-bordered">
						<thead class="thead-light">
						<tr>
							<th> # </th>
							<th> Konu </th>
							<th> Alıcı </th>
							<th> Tarih </th>
							<th> Sil </th>
							<th> Mesajı Gör </th>
						</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.WriterMessageID</td>
									<td>@item.Subject</td>
									<td>@item.ReceiverName</td>
									<td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
									<td><a href="/AdminMessage/AdminMessageDelete/@item.WriterMessageID" class="btn btn-outline-light">Sil</a></td>
									<td><a href="/AdminMessage/AdminMessageDetails/@item.WriterMessageID" class="btn btn-light">Mesajı Gör</a></td>
								</tr>
							}
						</tbody>
					</table> 
				</div>
			</div>
		</div>
	</div>
</div>



