@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="content-wrapper">
	<div class="row justify-content-center">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<p class="card-title" style="font-size: 24px">@Model.SenderName</p>
					<br />
					<p class="font-weight-500" style="font-size: 15px; word-break:break-word">@Model.MessageContent</p>
					<div class="text-right">
						<small><strong>@Model.Date.ToString("dd.MM.yyyy")</strong></small>
					</div>
					<div class="text-right">
						<small><strong>(@Model.Sender)</strong></small>
					</div>
					<div class="text-right">
						<small><strong>(@Model.Subject)</strong></small>
					</div>
					<a asp-action="ReceiverMessageList" class="btn btn-info mr-2">Admin Gelen Mesajlar</a>
					<a asp-action="SenderMessageList" class="btn btn-info mr-2">Admin Giden Mesajlar</a>
				</div>
			</div>
		</div>
	</div>
</div>
