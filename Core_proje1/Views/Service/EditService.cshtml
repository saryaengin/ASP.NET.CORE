@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<p class="card-description"> Hizmet Düzenleme Paneli </p>
				<form class="forms-sample">
					<div class="form-group">
						<label>ID</label>
						@Html.TextBoxFor(x => x.ServiceID, new { @class = "form-control" })
					</div>
					<div class="form-group">
						<label>Başlık</label>
						@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
					</div>
					<div class="form-group">
						<label>Görsel Url</label>
						@Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
					</div>
					<button type="submit" class="btn btn-outline-light mr-2">Kaydet</button>
					<button class="btn btn-outline-light">İptal</button>
				</form>
			</div>
		</div>
	</div>
}


