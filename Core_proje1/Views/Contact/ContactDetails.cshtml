@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="content-wrapper">
	<div class="row justify-content-center">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<p class="card-title" style="font-size: 24px">@Model.Name</p>
					<br />
					<p class="font-weight-500" style="font-size: 15px; word-break:break-word">@Model.Content</p>
					<div class="text-right">
						<small><strong>@Model.Date.ToString("dd.MM.yyyy")</strong></small>
					</div>
					<div class="text-right">
						<small><strong>(@Model.Mail)</strong></small>
					</div>
				</div>
			</div>
		</div>
		<a asp-action="Index" class="btn btn-outline-light" mr-2>İletişim Sayfası</a>
	</div>
</div>

