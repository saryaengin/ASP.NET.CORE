@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Yetenek Tablosu</h4>
			<br/>
			<div class="table-responsive">
				<table class="table table-bordered">
					<thead class="thead-light">
					<tr>
						<th> # </th>
						<th> Başlık </th>
						<th> Oran </th>
						<th> Sil </th>
						<th> Düzenle </th>
					</tr>
					</thead>
					<tbody>
					@foreach(var item in Model)
					{
						<tr>
							<th>@item.SkillID</th>
							<td class="budget">@item.Title</td>
							<td>
								<div class="d-flex align-items-center">
									<span class="completion mr-2">@item.Value %</span>
									<div>
										<div class="progress">
											<div class="progress-bar bg-success" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
										</div>
									</div>
								</div>
							</td>
							<td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-light">Sil</a></td>
							<td><a href="/Skill/EditSkill/@item.SkillID" class="btn btn-outline-light">Güncelle</a></td>
						</tr>
					}
					</tbody>
				</table>
				<br/>
				<a href="/Skill/AddSkill/" class="btn btn-outline-light">Yeni Yetenek Ekle</a>
			</div>
		</div>
	</div>
</div>
